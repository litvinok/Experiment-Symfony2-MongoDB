<?php

namespace Mongo\ExampleBundle\Document;
use Doctrine\ODM\MongoDB\Mapping\Annotations as MongoDB;
use Doctrine\Common\Collections\ArrayCollection;

/**
 * @MongoDB\Document
 */
class Group
{
    /**
     * @MongoDB\Id
     */
    protected $id;

    /**
     * @MongoDB\String
     */
    protected $name;

    /**
     * @MongoDB\ReferenceMany(targetDocument="Group", mappedBy="items")
     */
    public $parents;

    /**
     * @MongoDB\ReferenceMany(targetDocument="Group", inversedBy="parents")
     */
    public $items;

    public function __construct($name)
    {
        $this -> name = $name;
        $this -> parents = new ArrayCollection();
        $this -> items = new ArrayCollection();
    }
}
